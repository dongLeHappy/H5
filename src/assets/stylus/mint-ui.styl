
// MessageBox
.mint-msgbox {
  background-color: #fff;
  border-radius: 0.03rem;
  font-size: 0.16rem;
}
.mint-msgbox-header {
  padding: 0.15rem 0 0;
}
.mint-msgbox-content {
  padding: 0.1rem 0.2rem 0.15rem;
  border-bottom: 0.01rem solid #ddd;
  min-height: 0.36rem;
}
.mint-msgbox-input {
  padding-top: 0.15rem;
}
.mint-msgbox-input input {
  border: 0.01rem solid #dedede;
  border-radius: 0.05rem;
  padding: 0.04rem 0.05rem;
}
.mint-msgbox-input input.invalid {
  border-color: #ff4949;
}
.mint-msgbox-input input.invalid:focus {
  border-color: #ff4949;
}
.mint-msgbox-errormsg {
  color: red;
  font-size: 0.12rem;
  min-height: 0.18rem;
  margin-top: 0.02rem;
}
.mint-msgbox-title {
  font-size: 0.16rem;
  color: #333;
}
.mint-msgbox-message {
  color: #999;
  line-height: 0.36rem;
}
.mint-msgbox-btns {
  height: 0.4rem;
  line-height: 0.4rem;
}
.mint-msgbox-btn {
  line-height: 0.35rem;
  background-color: #fff;
}

.mint-msgbox-btn:active {
  background-color: #fff;
}
.mint-msgbox-cancel {
  border-right: 0.01rem solid #ddd;
}
.mint-msgbox-cancel:active {
  color: #000;
}
.mint-msgbox-confirm {
  color: #26a2ff;
  width: 50%;
}
.mint-msgbox-confirm:active {
  color: #26a2ff;
}
.v-modal {
  background: #000;
}
