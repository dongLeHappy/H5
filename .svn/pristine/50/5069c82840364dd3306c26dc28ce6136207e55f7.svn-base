                    break;
                case 'EF_SD':
                    return "山东11选5"
                    break;
                case 'EF_LN':
                    return "辽宁11选5"
                    break;
                case 'FT_HuB':
                    return "湖北快3"
                    break;
                case 'FT_GX':
                    return "广西快3"
                    break;
                case 'FT_AH':
                    return "安徽快3"
                    break;
                case 'FT_JL':
                    return "吉林快3"
                    break;
                case 'FT_JX':
                    return "江西快3"
