                    break;
            }
        }
    },
    mounted(){
        this.getSubGame();
        // this.intervalMainPage();
    },
    methods: {
        getSubGame(id){ // 一级玩法获取以及点击切换
            console.log("当前id：",id)
            if(!id){
                let i = 'all'
                this.active = i;
                this.$store.state.homeData.allSecondLottery = this.allSecondLottery
            } else {
                this.active = id;
                this.$store.state.homeData.allSecondLottery = [];
                this.$store.state.homeData.allSecondLottery = this.$store.state.homeData.secondLottery[id]
            }
        },
        changeLotteryLogo(icon){  // 彩种logo
            switch (icon) {
                case 'HK_LH':
                    return "lhc_icon"
                    break;
                case 'SSC_TJ':
                    return "tj_ssc"
                    break;
                case 'SSC_XJ':
