                    break;
                case 'EF_GD':
                    return "gd_icon"
                    break;
                case 'EF_AH':
                    return "ah_icon"
                    break;
                case 'EF_SH':
                    return "sh11_icon"
                    break;
                case 'EF_JX':
                    return "jx11_icon"
                    break;
                case 'EF_JS':
                    return "js11_icon"
                    break;
                case 'EF_SD':
                    return "sd11_icon"
                    break;
                case 'EF_LN':
                    return "ln11_icon"
                    break;
                case 'FT_HuB':
                    return "hb_k3"
                    break;
                case 'FT_GX':
                    return "gx_k3"
                    break;
                case 'FT_AH':
                    return "ah_k3"
                    break;
                case 'FT_JL':
                    return "jl_k3"
                    break;
                case 'FT_JX':
                    return "jx_k3"
                    break;
                case 'FT_JS':
                    return "js_k3"
                    break;
                case 'FT_FJ':
                    return "fj_k3"
                    break;
                case 'FT_BJ':
                    return "bj_k3"
                    break;
                case 'PKT_BJ':
                    return "PK10_icon"
                    break;
            }
        },
        intervalMainPage(){ // 主页轮询
            this.intervalMainPage = setInterval(() => {
                intervalMainPage().then( res => {
                    let par = res.data.data;
                    let second = [];
                    let allLottery = [];
                    let child = par.content[0].lotteryTree;
                    this.$store.state.homeData.persenalBalance = par.content[0].balance;
                    if(par.success == 1){
                        for (var i = 0; i < child.length; i++) {
                            second.push(child[i].children); // 二级彩种
                        }
                        for (var j = 0; j < second.length; j++) {
                            for (var t = 0; t < second[j].length; t++) {
                                allLottery.push(second[j][t]); // 所有彩种
                            }
                        }
                        if(this.active == 'all'){
                            this.$store.state.homeData.allSecondLottery = allLottery
                        }else{
                            this.$store.state.homeData.secondLottery = second
                        }
                    }
                })
            },3000)


        },
        checkLotteryRule(id,name,item){ //  点击二级彩种
            console.log("item:",item)
            let data = {lotteryId:id}
            openingInfo(data).then((res) => {  // 获取开盘信息
                let a = res.data.data;
                if(a.success == 1){
                    let par = a.content[0];
                    this.serverTime = par.serverTime;
                    this.endTime = par.currentOpening[0].endTime;
                    this.$store.state.homeData.nextOpenDate = this.endTime;// 开盘截止时间
                    this.$store.state.homeData.serverOpenTime = this.serverTime;   // 服务器时间
                    this.$store.state.homeData.openDate = par.lastPrize[0].gameNo; // 当前期号
                    this.$store.state.homeData.openBallNum = par.lastPrize[0].prizeResult;  // 最新一期球号
                    this.$store.state.homeData.nextOPenTime = par.lastPrize[0].gameNo; // 下期期号
                }
            })
            getRuleOrPercent(data).then( (res) => {  //  获取，存储当前点击的一级玩法
                let par = res.data.data;
                if(par.success == 1){
                    par.content.map(item => {
                        item.palyRuleList.map(it => {
                            it.betTypeList.map(element => {
                                Object.values(element).map(ele => {
                                    ele.isShow = false;
                                })
                            })
                        })
                    })
                    this.$store.state.homeData.thisFirstRule = par.content;
                    console.log("first", this.$store.state.homeData.thisFirstRule)
                    // this.$router.push({path:'/lotteryEnter',name:"lotteryEnter",query:{name:name,id:id}})
                    this.$router.push(`/lotteryEnter?id=${id}`)
                }
            })
        }
    },
    destroyed(){
    //    clearInterval(this.intervalMainPage);
    }

}
</script>

