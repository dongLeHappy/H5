  div.allBill 
    p.table-head
      span 注单号
      span 下注详情
      span 下注金额
      span 输赢金额
    .pull-contianer
      PullTo.pull-to(:top-load-method="topRefresh",:bottom-load-method="bottomRefresh")
        .table-content
          ul
            li(v-for="item,index in allData",:key="index",@click="showDetail(index)",:class="listColor == index ? 'addListColor':''") 
              span {{item.gameNo}}
              span {{item.playBalls[0].betOnValue}} @ {{ item.playBalls[0].odds }}
              span {{item.playBalls[0].amount}}
              span {{item.playBalls[0].winLoss}}
              .detail-box(v-if="showDetailBox && theIndex == index")
                p 注单号：{{item.playBalls[0].betNo}}
                p 下注时间：20190515 22:34:33
                p 彩种：{{item.playBalls[0].betOnValue}}
                p 下注详情：{{item.playBalls[0].winloss}}
                p 期号：{{item.playBalls[0].gameNo}}
                p 下注金额：{{item.playBalls[0].amount}}
                p 派彩金额：{{item.playBalls[0].amount}}
