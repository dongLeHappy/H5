          p.endTips(v-if="showEnd") —————————&nbsp&nbsp&nbsp&nbsp&nbsp已经到底了&nbsp&nbsp&nbsp&nbsp&nbsp—————————
</template>
<script>
import { mapState } from 'vuex'
import { getRecordList } from '../../../api/memberCenter'
import PullTo from 'vue-pull-to'
export default {
  data(){
    return{
      page:1,
      size:15,
      allData:[],
      showDetailBox:false,
      theIndex:"",
      thisId:'HK_LH',
      thisVal:'',
      totalPage:'1',
      showEnd:false,
      listColor:false, // 点击列表添加背景颜色
    }
  },
  props:['isLog'],
  components: {
      PullTo
  },
  computed:{
    ...mapState({
      lotteryId: state => state.homeData.recordLotteryId, 
    }),
    isLogin(){
      return this.isLog
    },
  },
  mounted(){
    this.getRecordListData('4');
    
  },
  methods:{
    topRefresh(loaded){  // 上拉刷新
        this.getRecordListData(this.thisVal)
        loaded('done');
    },
    bottomRefresh(loaded){ // 下拉刷新
        if(this.page < this.totalPage ){
            this.page++;
            this.getRecordListData(this.thisVal)
        }
        loaded('done');
    },
    getRecordListData(val){ // 获取列表数据
      this.thisVal = val;
      let data = {
        lotteryId:this.isLogin == '' ? 'HK_LH' : this.isLogin,
        settleStatus:val,
        page: this.page,
        size: this.size,
      }
      getRecordList(data).then(res =>{
        if (res.data.data.success == 1) {
          if(res.data.data.content.content.length == 0){
            this.$store.state.homeData.bettingRecord = true;
          }
          this.totalPage = res.data.data.content.pageable.totalPages
          if (this.page < 2) {
            this.allData = res.data.data.content.content;
          } else {
            this.allData = this.allData.concat(res.data.data.content.content);
          }
          if (this.page == this.totalPage) {
            this.showEnd = true;
          }

        }
      })
    },
    
    showDetail(index){ // 显示当前数据的详情
      this.listColor = index;
      this.theIndex = index;
      this.showDetailBox = !this.showDetailBox;
    }
  }
}
</script>
