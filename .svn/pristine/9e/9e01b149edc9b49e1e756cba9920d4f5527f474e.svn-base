body, div, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, p, blockquote, button,th, td ,a ,span
  margin 0
  padding 0
  // font-family "arial, tahoma,Hiragino Sans GB, 微软雅黑, sans-serif, 华文细黑, 黑体-简, San Francisco, Helvetica"
  font-size 0.12rem
  box-sizing border-box
body
  font-family 'Avenir', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color #3a3f53
  user-select none
  -webkit-user-select none
table
  border-collapse collapse
  border-spacing 0

fieldset, img
  border 0

address, caption, cite, code, dfn, em, strong, th, var
  font-style normal
  font-weight normal

ol, ul ,li
  list-style none
  margin 0
  padding 0

q:before, q:after
  content ''

abbr, acronym
  border 0

textarea:focus, input:focus
  outline none

img
  max-height 100%
  max-width 100%

button
  cursor pointer
  width 100%
  height 0.34rem
  line-height 0.34rem
  font-size 0.14rem
  display inline-block
  border-radius 0.04rem
  text-decoration none
  text-align center
  border 0px
  outline none
  background #ff7225
  color #fff
  display inline-block
  margin-bottom 0
  font-weight 400
  text-align center
  -ms-touch-action manipulation
  touch-action manipulation
  cursor pointer
  background-image none
  border 0.01rem solid transparent
  white-space nowrap
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  border-radius 0.04rem
  transition color .2s linear,background-color .2s linear,border .2s linear,box-shadow .2s linear
  color #fff
  background-color #c09d1e
  border-color #c0961e
  &.butCur
    border 1px solid #999!important
    background #662
    color $bgColor!important

a
  text-decoration none

input:not([type]), input[type="email"], input[type="number"], input[type="password"], input[type="tel"], input[type="url"], input[type="text"]
  padding 0.02rem 0.02rem
  outline none
  border-radius 0.04rem
  width 100%

input
  -webkit-appearance textfield
  -webkit-rtl-ordering logical
  user-select text
  cursor auto
  padding 1px
  border-width 2px
  border-style inset
  border-color initial
  border-image initial

input:-webkit-autofill,input:-webkit-autofill:hover,input:-webkit-autofill:focus
  box-shadow 0 0 0 60px #fff inset

input, textarea, select, button
  text-rendering auto
  letter-spacing normal
  word-spacing normal
  text-transform none
  text-indent 0rem
  text-shadow none
  display inline-block
  text-align start
  margin 0rem

input, textarea, select, button, meter, progress
  -webkit-writing-mode horizontal-tb

.action-block.action-block-top
  color #ffffff
.default-text
  color #ffffff!important
.endTips
  height 0.5rem
  color #a9a7a7
  text-align center
  line-height 0.6rem

.bg
  background rgba(0,0,0,0.8)
  left 0
  top 0
  filter "Alpha(opacity=60)"
  opacity 1
  display block
  position fixed
  top 0
  z-index 99
  width 100%
  height 100%

.blue
    background linear-gradient(#5099f7, #3e81d8)
.red
    background linear-gradient(#f16357, #a5362d 70%, #a5362d 100%)
.green
    background linear-gradient(#60c73a, #449d27)



.ball-color0
    background linear-gradient(#3fd9d0,#2da69e)!important
.ball-color1
    background linear-gradient(#e2dd44, #bdb831)
.ball-color2
    background linear-gradient(#c7c7c7, #9e9e9e)
.ball-color3
    background linear-gradient(#5099f7, #3e81d8)
.ball-color4
    background linear-gradient(#f7b44f, #d99b3f)
.ball-color5
    background linear-gradient(#449d27, #449d27)
.ball-color6
    background linear-gradient(#f16357, #a5362d)
.ball-color7
    background linear-gradient(#c73abf, #9e2896)
.ball-color8
    background linear-gradient(#7350f7, #603fd9)
.ball-color9
    background linear-gradient(#89351b, #702b16)
.ball-red
    background linear-gradient(#89351b, #702b16)
.ball-green
    background linear-gradient(#449d27, #449d27)
.ball-blue
    background linear-gradient(#5099f7, #3e81d8)


.content-box // 所有的内容
    height 100%
    background-color #42475d
    // padding 0.1rem 0.1rem 0
.percentBack // 点击赔率添加背景颜色
  background-color #5b6488
.ball-color  // 球号颜色
  display inline-block
  height 0.21rem!important
  width 0.21rem!important
  text-align center
  line-height 0.21rem
  border-radius 50%
  box-shadow 0rem 0.01rem 0.02rem rgba(0,0,0,0.6)
  margin-top 0.1rem!important
.active // 选中玩法的时候添加样式
  border-left #01c8b3 solid 0.04rem
  background-color #32374a
  font-size 0.16rem!important
  color #01c8b3!important
.redColor // 球号颜色
  background-color red
.blueColor  // 球号颜色
  background-color blue
.greenColor  // 球号颜色
  background-color green
.rule-content // 玩法内容
  display flex
  flex-direction row
  .rule-left-list // 左侧玩法列表
    width 20%
    height calc(100vh - 1.42rem) !important;
    background-color #42475d
    ul
      li
        text-align center
        line-height 0.45rem
        color #ffffff
        font-size 0.14rem
        border-bottom 0.01rem solid #545a72

.rule-content-list // 玩法内容
  display flex
  flex-direction column
  width 80%
  color #ffffff
  border 0.01rem solid #545a72
  border-right none
  border-bottom none
  background-color #3a3f53
.rule-top-list // 二级玩法
  ul
    width 100%
    display flex
    flex-wrap wrap
    flex-direction row
    flex-grow 2
    li
      width 33%
      text-align center
      background-color #42475d
      line-height 0.3rem
      color #ffffff
      &:last-child
        flex-grow 2

.rule-btn-list // 赔率内容
  width 100%
  overflow auto
  height calc(100vh - 2.63rem) !important
  // height auto
  ul
    display flex
    flex-direction row
    flex-wrap wrap
    li
      width 50%
      text-align center
      line-height 0.41rem
      border 1px solid #545a72
      border-left none
      border-top none
      span
        display inline-block
        width: 50%
        text-align center
      span:first-child
        position relative
        span
          z-index 9999
          // position absolute
          // left -0.35rem
        .ball
          width 0.20rem
          height 0.20rem
          position absolute
          left 0.28rem
          top 0.06rem
      // span:last-child
      //   margin-left: 0.2rem
    li:nth-child(even)
      border-right none
